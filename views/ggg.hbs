<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        td, th {
        padding:5px;
        min-width:90px;
        max-width:200px;
        text-align:start;
        }
        .btn {
        padding:4px; 
        border:1px solid #333; 
        background-color: #eee; 
        border-radius: 2px; 
        margin:5px; 
        cursor:pointer;
        }

        </style>
</head>
<body>
<h2>Списо пользователей</h2>
<form name="userForm" action="/api/users" method="post">
    <input type="hidden" name="id" value="0" />
    <p>
        <label>Имя:</label><br>
        <input type="text" name="name" />
    </p>
    <p>
        <label>Возраст:</label><br>
        <input type="number"  name="age"/>
    </p>
    <p> 
        <button id="submitBtn" type="submit">Сохранить</button>
        <button id="resetBtn">Сбросить</button>
    </p>
</form>
<table>
    <tr>
        <th>Id</th>
        <th>Имя</th>
        <th>Возраст</th>
      </tr>
      {{#each seach}}
               <tr>
                <td>{{this._id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.age}}</td>
                <td><a href="{{this._id}}"><button>Изменить</button></a></td>
                <td><a href="/api/users/{{this._id}}"><button>Удалить</button></a></td>
               </tr>
    {{/each}}

   
</table>

</body>
</html>